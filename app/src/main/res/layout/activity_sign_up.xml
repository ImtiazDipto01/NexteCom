<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/sign_up_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/user_email"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="45dp"
            android:gravity="center"
            android:src="@drawable/nextecom3" />

        <EditText
            android:id="@+id/user_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:hint="Email"
            android:padding="12dp"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/black"
            android:textColorHint="@color/semi_black" />

        <EditText
            android:id="@+id/user_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="left"
            android:hint="Password"
            android:padding="12dp"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/black"
            android:textColorHint="@color/semi_black" />

        <Button
            android:id="@+id/submit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/user_password"
            android:layout_alignStart="@+id/user_password"
            android:layout_below="@+id/user_password"
            android:layout_marginTop="15dp"
            android:background="@color/nav_drawer_background"
            android:gravity="center"
            android:text="Sign Up"
            android:textColor="@color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/forgot_password_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/forgot_user_email"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="45dp"
            android:gravity="center"
            android:src="@drawable/nextecom3" />

        <EditText
            android:id="@+id/forgot_user_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:hint="Email"
            android:padding="12dp"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/black"
            android:textColorHint="@color/semi_black" />

        <Button
            android:id="@+id/forgot_password_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/nav_drawer_background"
            android:gravity="center"
            android:text="Submit"
            android:textColor="@color/white"
            android:layout_below="@+id/forgot_user_email"
            android:layout_alignLeft="@+id/forgot_user_email"
            android:layout_alignStart="@+id/forgot_user_email" />

    </RelativeLayout>

</RelativeLayout>
