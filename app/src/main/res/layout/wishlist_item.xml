<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/wish_product_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/product" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wish_product_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/wish_product_image"
        android:layout_toRightOf="@+id/wish_product_image"
        android:layout_marginLeft="4dp"
        android:ellipsize="end"
        android:text="Samsung j7"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:id="@+id/newtakasign"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/wish_product_name"
        android:layout_toEndOf="@+id/wish_product_image"
        android:layout_toRightOf="@+id/wish_product_name"
        android:layout_marginLeft="2dp"
        android:background="@drawable/taka_sign"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wish_product_price"
        android:layout_below="@+id/wish_product_name"
        android:layout_toEndOf="@+id/newtakasign"
        android:layout_toRightOf="@+id/newtakasign"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:text="999999"
        android:textColor="@color/red"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/similar_product_salesparectage"
        android:layout_below="@+id/wish_product_name"
        android:layout_toRightOf="@+id/wish_product_price"
        android:layout_toEndOf="@+id/wish_product_price"
        android:layout_marginLeft="8dp"
        android:text="31% OFF"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:background="@color/red"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wish_product_warranty"
        android:text="1 year service warranty"
        android:layout_below="@+id/wish_product_price"
        android:textColor="@color/semi_black"
        android:layout_alignStart="@+id/newtakasign"
        android:layout_alignLeft="@+id/newtakasign"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wish_product_emi_tax"
        android:layout_below="@+id/wish_product_warranty"
        android:text="Emi text: 31% 2(per month)"
        android:textColor="@color/nav_drawer_background"
        android:layout_alignStart="@+id/newtakasign"
        android:layout_alignLeft="@+id/newtakasign"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/semi_black"></LinearLayout>
</RelativeLayout>