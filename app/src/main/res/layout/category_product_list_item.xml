<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_product_container"
    android:layout_width="match_parent"
    android:layout_height="170dp">


    <ImageView
        android:id="@+id/product_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/product" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/product_image"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/product_image"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Samsung j7"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/rating_bar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_name"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/product_image"
        android:layout_toRightOf="@+id/product_image"
        android:isIndicator="false"
        android:numStars="5" />

    <TextView
        android:id="@+id/rating_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rating_bar"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@+id/rating_bar"
        android:layout_toRightOf="@+id/rating_bar"
        android:text="4.2/5(72)"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_alignLeft="@+id/product_name"
        android:layout_alignStart="@+id/product_name"
        android:layout_below="@+id/rating_bar"
        android:background="@drawable/taka_sign" />

    <TextView
        android:id="@+id/sale_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sale_percentage"
        android:layout_below="@+id/rating_bar"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:text="999999"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/red" />

    <TextView
        android:id="@+id/market_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_below="@+id/sale_price"
        android:background="@drawable/strike"
        android:text="100000000"
        android:textColor="@color/semi_black" />

    <TextView
        android:id="@+id/sale_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rating_text"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/sale_price"
        android:layout_toRightOf="@+id/sale_price"
        android:background="@color/red"
        android:text="-31% off"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/warranty_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/market_price"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/product_image"
        android:layout_toRightOf="@+id/product_image"
        android:text="1 year service warranty"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/semi_black" />

    <TextView
        android:id="@+id/emi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emi text: 31% 2(per month)"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/nav_drawer_background"
        android:layout_below="@+id/warranty_text"
        android:layout_toRightOf="@+id/product_image"
        android:layout_toEndOf="@+id/product_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/semi_black"
        android:layout_alignParentBottom="true">
    </LinearLayout>

</RelativeLayout>
